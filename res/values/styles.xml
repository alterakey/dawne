<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MyTheme" parent="@style/Theme.AppCompat">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="ViewerTheme" parent="@style/Theme.AppCompat">
        <item name="android:windowBackground">@color/dark_grey</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/ViewerActionBar</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/ViewerActionBar</item>
    </style>

    <style name="ViewerActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">#99000000</item>
        <item name="android:displayOptions"></item>
        <item name="background">@color/transparent_black</item>
        <item name="displayOptions"></item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:displayOptions">homeAsUp|showHome|showTitle</item>
        <item name="displayOptions">homeAsUp|showHome|showTitle</item>
    </style>

    <color name="dark_grey">#333333</color>
    <color name="transparent_black">#99000000</color>

</resources>